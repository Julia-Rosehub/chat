<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <img src="images/contact.jpg" class="contact" alt="">
    </div>
    <div class="col-sm-6">
      <h1>Subscribe!</h1>
      <p>Enter your email if you're interested to learn more:</p>
      <form class="subscription-form" action="/subscribers/create" method="post">
        <input type="text" name="name" placeholder="Name" autofocus required>
        <input type="text" name="email" placeholder="Email" required>
        <input type="text" name="zipCode" placeholder="Zip Code" pattern="[0-9]{6}" required>
        <input class="btn btn-primary" type="submit" value="Send">
      </form>
    </div>
  </div>
</div>